# Router configuration variables
# This file is generated by the installation script

{
  # System settings
  hostname = "nixos-router";
  timezone = "America/Anchorage";
  username = "routeradmin";

  # WAN configuration
  wan = {
    type = "dhcp";  # "dhcp" or "pppoe"
    interface = "eno1";
  };

  # LAN configuration
  lan = {
    interfaces = [ "enp4s0" "enp5s0" "enp6s0" "enp7s0" ];  # Bridge interfaces
    ip = "192.168.4.1";
    prefix = 24;
  };

  # DHCP configuration
  dhcp = {
    start = "192.168.4.100";
    end = "192.168.4.200";
  };
}
